					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"numero\": \"9999999999\",\n  \"titular\": \"Inexistente\",\n  \"saldo\": 1000.00,\n  \"tipoCuenta\": \"AHORRO\"\n}"
				},
				"url": {
					"raw": "{{API_URL}}/cuentas/9999999999",
					"host": ["{{API_URL}}"],
					"path": ["cuentas", "9999999999"]
				},
				"description": "Intenta actualizar una cuenta que no existe.\n\nEsperado: HTTP 404 Not Found"
			},
			"response": []
		},
		{
			"name": "11 - Eliminar cuenta inexistente",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{API_URL}}/cuentas/9999999999",
					"host": ["{{API_URL}}"],
					"path": ["cuentas", "9999999999"]
				},
				"description": "Intenta eliminar una cuenta que no existe.\n\nEsperado: HTTP 404 Not Found"
			},
			"response": []
		},
		{
			"name": "12 - Estado final - Listar todas",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{API_URL}}/cuentas",
					"host": ["{{API_URL}}"],
					"path": ["cuentas"]
				},
				"description": "Lista el estado final de las cuentas.\n\nEsperado: 3 cuentas\n- Juan Pérez (1000000001) - original\n- María López (1000000002) - original\n- Ana Torres (1000000004) - nueva creada\n- Carlos Ruiz (1000000003) - ELIMINADA"
			},
			"response": []
		}
